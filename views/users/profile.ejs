<%- include('../partials/header') %>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card profile">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" alt="user background" src="https://coverfiles.alphacoders.com/108/108298.png">
          </div>
          <div class="row user-row">
            <div class="col s3">
              <img src='<%=user.avatar %>' alt="Profile Image" class="avatar activator">
            </div>
            <div class="col s3">
              <a href="#">
                <i class="material-icons">mail_outline</i>
              </a>
            </div>
            <div class="col s3">
              <a href="/watchlist/<%=user.id%>">
                <i class="material-icons">tv</i>
              </a>
            </div>
          </div>
          <div class="card-reveal">
            <div class="row">
              <span class="card-title"><i class="material-icons right">close</i></span>
            </div>
            <p class="flow-text">
              <%= user.name %>
            </p>
            <p class="flow-text">
              <%= user.email %>
            </p>
            <div class="col s6 offset-s3">
              <form action="">
                <input class="center-align" type="text" autocomplete="off" name="nickname" placeholder=<%=user.nickname?
                  user.nickname : 'nickname' %> >
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel ">

        <a class="carousel-item" href="#one!"><img src="https://lorempixel.com/250/250/nature/1"></a>
        <a class="carousel-item" href="#two!"><img src="https://lorempixel.com/250/250/nature/2"></a>
        <a class="carousel-item" href="#three!"><img src="https://lorempixel.com/250/250/nature/3"></a>
        <a class="carousel-item" href="#four!"><img src="https://lorempixel.com/250/250/nature/4"></a>
        <a class="carousel-item" href="#five!"><img src="https://lorempixel.com/250/250/nature/5"></a>
      </div>
    </div>
  </div>
  </div>
  <%- include('../partials/footer') %>