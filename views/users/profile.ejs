<%- include('../partials/header') %>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" alt="user background"
              src="https://assets-cdn.audionetwork.com/usr/common/MF_3_745x200.png">
          </div>
          <div class="row user-row">
            <div class="col s3">
              <img src='<%=user.avatar %>' alt="Profile Image" class="avatar activator">
            </div>
            <div class="col s3">
              <a href="#">
                <i class="material-icons">mail_outline</i>
              </a>
            </div>
            <div class="col s3">
              <a href="/watchlist/<%=user.id%>">
                <i class="material-icons">tv</i>
              </a>
            </div>
          </div>
          <div class="card-reveal">
            <div class="row">
              <span class="card-title"><i class="material-icons right">close</i></span>
            </div>
            <p>
              <%= user.name %>
            </p>
            <p>
              <%= user.email %>
            </p>
            <div class="col s2 offset-s5">
              <form action="">
                <input type="text" autocomplete="off" name="nickname" placeholder=<%=user.nickname? user.nickname
                  : 'nickname' %> >
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <%- include('../partials/footer') %>